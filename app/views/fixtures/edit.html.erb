<h1>Edit Match</h1>
<%= form_for ([@fixture]) do |f| %>

  

<div class="field">
    <% f.text_field :game_id %>
  </div>


<div class="field">
    <%= f.label :matchdate %><br />
    <%= f.datetime_select :matchdate, :ampm => true %>
  </div>

<div class="field">
    <%= f.label :hometeam %><br />

    <%= f.select(:hometeam, Fixture::TEAM_TYPES)%>
  </div>

<div class="field">
    <%= f.label :awayteam %><br />
     <%= f.select(:awayteam, Fixture::TEAM_TYPES)%>
  </div>

<div class="field">
	    <%= f.label :matchhomescore %><br />
    <%= f.text_field :matchhomescore, :class => "input-small" %>
  </div>
<div class="field">
	    <%= f.label :matchawayscore %><br />
   <%= f.text_field :matchawayscore, :class => "input-small" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Show', @fixture %> |
<%= link_to 'Back', fixtures_path %>
