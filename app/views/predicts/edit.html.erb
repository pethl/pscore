<% provide(:title, 'Edit Predictions') %>
<h1>Editing prediction</h1><br><br>

<%= form_for(@predict) do |f| %>
  <% if @predict.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@predict.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @predict.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<m2>

<div class="field">
    <%= f.label :homescore %>

