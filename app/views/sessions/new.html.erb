<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>

<%= form_for(:session, url: sessions_path) do |f| %>

     <%= f.label :name %>
     <%= f.text_field :name %>

     <%= f.label :password %>
     <%= f.password_field :password %>

     <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
   <% end %>

   <p>New user? <%= link_to "Sign up now!", new_user_path %></p>


