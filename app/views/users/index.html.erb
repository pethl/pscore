<% provide(:title, 'Users') %>
<h1>Users</h1>
<br>
<table class="table">
  <tr>
    <th>Name</th>
    <th><b>Show Predictions</b></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%= link_to user.name, user %></td>
 
	<td><b>
	<%= link_to "=>", user_path(user), :class => "icon-hand-right" %></b></td>



<% if signed_in? %>
	<% if current_user.admin? && current_user?(user)%>
		<td><b><%= link_to 'edit', edit_user_path(user) %></b></td>
	    	<td><b><%= link_to "delete", user, method: :delete,
	                                  data: { confirm: "You sure?" } %></b></td>				  									
		<% elsif  %>
			    <% if current_user.admin? %>
				<td></td>
					<td><b><%= link_to "delete", user, method: :delete,
			                                  data: { confirm: "You sure?" } %></b></td>
					    	<td></td>				  	
			<% elsif  %>
		    <% if current_user?(user) %>
				<td><b><%= link_to 'edit', edit_user_path(user) %></b></td>
			    	<td></td>				  	
			
			<% else %>
				<td></td>
				<td></td>
			<% end %>
		<% end %>
<% end %>  
<% end %>
</tr>
<% end %>
</table>
<br />

